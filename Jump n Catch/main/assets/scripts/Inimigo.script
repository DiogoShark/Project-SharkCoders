go.property("speed", 100)
go.property("left_limit", 150)
go.property("right_limit", 500)

function init(self)
	self.dir = 1
end

function update(self, dt)
	local pos = go.get_position()
	pos.x = pos.x + self.speed *self.dir * dt

	if pos.x < self.left_limit then
		self.dir = 1
		
	elseif pos.x > self.right_limit then
		self.dir = -1
	end

	go.set_position(pos)
end






